---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  path: `/${string}`;
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <slot />

  <Footer />
</BaseLayout>

<style>
  html {
    @apply text-xs font-commitmono;
  }
</style>
