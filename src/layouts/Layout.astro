---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  path: `/${string}`;
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <slot />

  <Footer />
</BaseLayout>

<style is:global>
  html {
    @apply text-sm font-commitmono md:text-xs;
  }

  body {
    @apply bg-ibm-background text-ibm-foreground;
  }

  a[href] {
    text-decoration: underline;
  }

  a[class] {
    text-decoration: none;
  }

  a[href]:focus,
  a[href]:hover {
    @apply outline-none no-underline bg-ibm-foreground text-ibm-background;
  }
</style>
